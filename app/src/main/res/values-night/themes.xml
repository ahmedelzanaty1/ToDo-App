<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black3</item>
        <item name="colorSecondaryVariant">@color/black3</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/main_bg_dark</item>
        <!-- Customize your theme here. -->
    </style>
    <style name ="main_bg">
        <item name="android:background">@color/main_bg_dark</item>
    </style>
    <style name ="nav_bg">
        <item name="android:background">@color/black2</item>
    </style>
    <style name="tv_bg">
        <item name="android:textColor">@color/black2</item>
    </style>
    <style name="day_bg">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="box_bg">
        <item name="android:background">@drawable/calender_box_night</item>
    </style>
    <style name="task_bg">
        <item name="android:textColor">@color/blue</item>
    </style>
</resources>